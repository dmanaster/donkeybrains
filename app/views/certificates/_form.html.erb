<%= form_for(@certificate, :html => { :class => "form-horizontal donkey-form" } ) do |f| %>
  <% if @certificate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@certificate.errors.count, "error") %> prohibited this certificate from being saved:</h2>

      <ul>
      <% @certificate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group">
      <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :placeholder => "Frank Reynolds", :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :institution, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :institution, :placeholder => "Reid Mental Institution", :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :state, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :state, :placeholder => "Pennsylvania", :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :president, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :president, :placeholder => "Noah Mathers", :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :psychiatrist, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :psychiatrist, :placeholder => "Christina Haberkern", :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Because I have a certificate!", :class => " btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>

<% end %>
